import time, httplib, urllib, urllib2
import RPi.GPIO as io
io.setmode(io.BCM)
pir_pin = 17
io.setup(pir_pin, io.IN)
licznik = 0
while True:
	if io.input(pir_pin):
		licznik = licznik + 1
		print("wykryto %s") %licznik
		time.sleep(1)
		conn = httplib.HTTPSConnection("api.pushover.net:443")
			conn.request("POST", "/1/messages.json",
				urllib.urlencode({
					"token": "aMrBqbkbRRgjrEUn5HnDvJrikTnViT",
					"user": "ucyKVK6zEZ5LKe9kmS2cgPRgwvAyF3",
					"message": "wiem, ze mnie lubisz",
					"sound": "siren" }), { "Content-type": "application/x-www-form-urlencoded" })
		print(conn.getresponse())
		
	time.sleep(0.5)
